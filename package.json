{
  "name": "touch-ui",
  "version": "0.3.0",
  "description": "provides custom touch events",
  "license": "MIT",
  "module": "dist/index.js",
  "main": "dist/touch-ui.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "webpack --env build",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "npm-run-all test:unit test:webtest",
    "test:unit": "nyc ava",
    "test:webtest": "npm-run-all webtest:start webtest:run webtest:stop",
    "webtest:start": "forever start --silent node_modules/http-server/bin/http-server",
    "webtest:stop": "forever stop --silent node_modules/http-server/bin/http-server",
    "webtest:run": "webtest webtest.txt",
    "upgrade": "npm-check-updates -a/--upgradeAll && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allenhwkim/touch-ui.git"
  },
  "author": "Allen Kim<allenhwkim@gmail.com>",
  "bugs": {
    "url": "https://github.com/allenhwkim/geocoder/issues"
  },
  "homepage": "https://github.com/allenhwkim/touch-ui#readme",
  "keywords": [
    "mobile",
    "touch",
    "drag",
    "drop",
    "tap",
    "hold",
    "swipe"
  ],
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.24.1",
    "babel-register": "^6.24.1",
    "browser-env": "^3.1.0",
    "chai": "3.5.0",
    "chromedriver": "^2.24.1",
    "eslint": "^4.4.1",
    "eslint-config-google": "^0.9.1",
    "eslint-loader": "^1.7.1",
    "forever": "^0.15.3",
    "http-server": "^0.10.0",
    "npm-check-updates": "^2.12.1",
    "npm-run-all": "^3.1.2",
    "nyc": "^11.1.0",
    "preferences": "^0.2.1",
    "rimraf": "^2.6.1",
    "webpack": "3.1.0",
    "webtest": "^0.8.1",
    "yargs": "7.1.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "test/**/*"
    ],
    "retporter": [
      "text-lcov",
      "html"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "require": [
      "babel-core/register",
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "inherit": true,
    "verbose": true
  }
}
